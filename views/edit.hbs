<form action="/gallery/{{image.id}}?_method=PUT" method="POST">
    <input type="text" name="title" value="{{image.title}}" id="title">
    <input type="text" name="author" value="{{image.author}}" id="author">
    <input type="text" name="description" value="{{image.description}}" id="description">
    <input type="text" name="url" value="{{image.url}}" id="url">

    <button type="submit">Publish Changes</button>
    <button type="submit" formaction="/gallery/{{image.id}}?_method=DELETE">Delete</button>
    <button type="submit" formaction="/gallery/{{image.id}}" formmethod="GET">Back to Image Details</button>
    <button type="submit" formaction="/" formmethod="GET">Back to Gallery</button>
</form>